# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=production
PORT=3000

# ============================================
# ADMIN CREDENTIALS (REQUIRED - CHANGE IN PRODUCTION!)
# ============================================
ADMIN_EMAIL=admin@sleuthservice.com
ADMIN_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_MIN_12_CHARS

# ============================================
# JWT SECRET (REQUIRED - Generate strong random string)
# ============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_MIN_32_CHARS

# ============================================
# EMAIL CONFIGURATION (cPanel Webmail)
# ============================================
# Primary method: SMTP settings for cPanel
SMTP_HOST=mail.sleuthservice.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@sleuthservice.com
SMTP_PASS="YOUR_EMAIL_PASSWORD_HERE"

# Alternative: Legacy email settings (if SMTP_* not set)
EMAIL_USER=noreply@sleuthservice.com
EMAIL_PASSWORD="YOUR_EMAIL_PASSWORD_HERE"
EMAIL_PORT=587
EMAIL_SECURE=false

# Default "From" address for emails
DEFAULT_EMAIL_FROM=noreply@sleuthservice.com

# ============================================
# SSL/HTTPS CONFIGURATION
# ============================================
USE_HTTPS=false
# Set to true if you have SSL certificates in backend/ssl/

# ============================================
# DATA RETENTION POLICY (GDPR Compliance)
# ============================================
# Retention period in days
DATA_RETENTION_DAYS=2555
COMPLETED_CASE_RETENTION_DAYS=1095
BACKUP_RETENTION_DAYS=30

# ============================================
# SECURITY SETTINGS
# ============================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File upload limits
MAX_FILE_SIZE_MB=10
MAX_FILES_PER_UPLOAD=5

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
# Options: error, warn, info, debug

