# Server Configuration
PORT=3000

# Admin Credentials (CHANGE IN PRODUCTION)
ADMIN_EMAIL=admin@sleuthservice.com
ADMIN_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# JWT Secret (CHANGE IN PRODUCTION - Use a strong random string)
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING

# Email Configuration (Gmail Example)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Or use SMTP settings
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_SECURE=false

# Data Retention Policy (GDPR Compliance)
# Retention period in days - cases older than this will be automatically deleted
DATA_RETENTION_DAYS=2555  # 7 years (default)
COMPLETED_CASE_RETENTION_DAYS=1095  # 3 years for completed cases

# Backup Configuration
BACKUP_RETENTION_DAYS=30  # Keep backups for 30 days

# Error Tracking
# Error logs are automatically cleaned after 30 days

